<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_of_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:padding="0dp"
        android:layout_marginTop="8dp"
        android:id="@+id/button_decrement"
        android:onClick="decrementQuantity"
        android:text="-"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/text_of_quantity"
        android:textSize="24sp"
        android:textColor="@color/white"

        />
    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_below="@id/text_of_quantity"
        android:layout_toRightOf="@id/button_decrement"
        />

    <Button
        android:id="@+id/button_increment"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/text_of_quantity"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/quantity_text_view"
        android:onClick="incrementQuantity"
        android:padding="0dp"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="24sp"

        />





    <TextView
        android:id="@+id/text_of_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@id/quantity_text_view"
        android:layout_below="@id/quantity_text_view"
         />
    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@id/text_of_price"
        android:layout_below="@id/text_of_price"
        />
    <Button
        android:id="@+id/button_order"
        android:onClick="submitOrder"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/price_text_view"
        android:layout_marginTop="16dp"
        android:text="Order"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/price_text_view"

        />

</RelativeLayout>